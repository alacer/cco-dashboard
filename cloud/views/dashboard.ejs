            <div class="tab-pane fade in active" id="OpenAlerts">

              <div class="form-group">  
                  <label for="validateSelect">Date</label>
                  <select id="validateSelect" name="validateSelect" class="form-control parsley-validated" data-required="true">

                    <%  
                    for(var j = 0; j < uniquedates.length; j++){ %>
                        <option> <%= uniquedates[j]%> </option>
                   <% } %>  

                  </select>
              </div>


